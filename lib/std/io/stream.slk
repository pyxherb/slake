module std.io.stream;

use {
    except = core.except
}

public trait TBasicStream {
    bool eof();
    void close();
}

public trait TSeekableStream : @TBasicStream {
	void seekAbs(u64 off);
    void seekDiff(i64 off);
    void seekEnd(u64 off);
	usize tell();
}

public trait TInputStream : @IBasicStream {
	byte[] read(usize nBytes);
}

public trait TOutputStream : @IBasicStream {
	usize write(byte[] data);
    void flush();
}

public trait TIOStream : @TInputStream, @TOutputStream {
}
